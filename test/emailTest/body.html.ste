        {% if smash.emails.length === 1 %}
            {% if smash.title %}
                <title>{{ "EMAIL_OBJECT" | translate({'title': smash.title, 'email' : smash.emails[0]}) }}</title>
            {% endif %}
            {% if !smash.title %}
                <title>{{ "EMAIL_NO_OBJECT" | translate({'email': smash.emails[0]}) }}</title>
            {% endif %}
        {% else %}
            {% if smash.title %}
                <title>{{ "EMAIL_OBJECT_PLURAL" | translate({'title': smash.title, 'number': smash.emails.length}) }}</title>
            {% endif %}
            {% if !smash.title %}
                <title>{{ "EMAIL_NO_OBJECT_PLURAL" | translate({'number': smash.emails.length}) }}</title>
